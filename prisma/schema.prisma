generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Sale {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  orderCode    String
  saleDate     DateTime?
  customerName String
  totalWeight  Float
  address      String
  seller       String
  totalPrice   Float
  fantasyName  String
  DaySales     DaySales? @relation(fields: [daySalesId], references: [id])
  daySalesId   String?   @db.ObjectId
  createdAt    DateTime  @default(now())
}

model DaySales {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  sales Sale[]
}
